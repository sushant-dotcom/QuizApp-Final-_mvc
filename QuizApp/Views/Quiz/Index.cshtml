@model List<Quiz>   

    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class ="col-12 text-center">
                    <h2 class="text-white py-2">Quiz Category</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
                
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Quiz" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Add New Topic
                </a>

            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Sr.No
                    </th>
                    <th>
                        Topic
                    </th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @{
                    //razor syntax
                    int srNo = 1;  // Initialize the serial number
                }
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>
                            @srNo
                        </td>
                        <td>
                            @obj.Topic
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Quiz" asp-action="Edit" asp-route-Id="@obj.quiz_id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Quiz" asp-action="Delete" asp-route-Id=" @obj.quiz_id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                                <a asp-controller="Question" asp-action="Create" asp-route-Id="@obj.quiz_id" class="btn btn-primary mx-2">
                                    <i class="bi bi-plus-lg"></i>  Add Question
                                </a>
                            </div>
                        </td>
                    </tr>
                    srNo++;
                }
            </tbody>
        </table>

        </div>

    </div>


